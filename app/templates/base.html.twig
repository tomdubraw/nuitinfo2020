<!DOCTYPE html>
<html>
    <head>
        {% block meta %}
            <meta charset="UTF-8">
        {% endblock %}
        <title>{% block title %}My App{% endblock %}</title>
        <link rel="icon" href="favicon.ico">
        {% block stylesheets %}{% endblock %}
        {% block scriptlink %} {% endblock %}
        {{ encore_entry_link_tags('app') }}
    </head>
    <body>
        {% block main %}
        <nav class="navbar navbar-expand fixed-top navbar-dark bg-secondary">
            <a class="navbar-brand" href="{{ path('home') }}"><i class="fas fa-water mr-2"></i>SurferApp</a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a href="{{ path('trip_create') }}" class="nav-link d-flex align-items-center">
                            <i class="fas fa-plus-square fa-2x"></i>
                            <span class="d-none d-md-inline d-lg-inline ml-2">Ajouter</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="{{ path('app_login') }}" class="nav-link d-flex align-items-center">
                            <i class="fas fa-sign-in-alt fa-2x"></i>
                            <span class="d-none d-md-inline d-lg-inline ml-2">Connexion</span>
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

        {% block body %}{% endblock %}

        <footer class="fixed-bottom bg-secondary">
            <div class="text-center p-2">
                <small>Copyright &copy; 2020 - StackOverflow Driven Development</small>
            </div>
        </footer>
        {% endblock %}

        {% block javascripts %}{% endblock %}
        {{ encore_entry_script_tags('app') }}
    </body>
</html>
