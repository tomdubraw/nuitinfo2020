<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}My App{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        {{ encore_entry_link_tags('app') }}
        <nav class="navbar navbar-expand fixed-top navbar-dark bg-secondary">
            <a class="navbar-brand" href="#">SurferApp</a>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item "><a href="#" class="nav-link"><i class="fas fa-plus-square fa-2x"></i></a></li>
                    <li class="nav-item"><a href="#" class="nav-link"><i class="fas fa-sign-in-alt fa-2x"></i></a></li>
                </ul>
            </div>
        </nav>
    </head>
    <body>
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
        {{ encore_entry_script_tags('app') }}
