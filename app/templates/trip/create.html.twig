{% extends 'base.html.twig' %}

{% block title %}AJouter un trip - SurferApp{% endblock %}

{% block body %}

    {{ form_start(form) }}

        <div class="row d-flex justify-content-center">
            <div class="col-md-4 d-flex justify-content-center text-center">
                {{ form_row(form.starttime) }}
            </div>
            <div class="col-md-4 d-flex justify-content-center text-center">
                {{ form_row(form.endtime) }}
            </div>
        </div>

        <div class="row d-flex justify-content-center pt-2">
            <div class="col-md-4 d-flex justify-content-center text-center">
                {{ form_row(form.city) }}
            </div>
            <div class="col-md-4 d-flex justify-content-center text-center">
                {{ form_row(form.batherNumber) }}
            </div>
        </div>

        <div class="row d-flex justify-content-center">
            <div class="col-md-4 d-flex justify-content-center text-center">
                {{ form_row(form.surferNumber) }}
            </div>
            <div class="col-md-4 d-flex justify-content-center text-center">
                {{ form_row(form.fishingBoat) }}
            </div>
        </div>

        <div class="row d-flex justify-content-center">
            <div class="col-md-4 d-flex justify-content-center text-center">
                {{ form_row(form.pleasureBoat) }}
            </div>
            <div class="col-md-4 d-flex justify-content-center text-center">
                {{ form_row(form.sailboat) }}
            </div>
        </div>

        <div class="row d-flex justify-content-center">
            <div class="col-md-12 d-flex justify-content-center text-center">
                {{ form_row(form.pollutionCommentary) }}
            </div>
        </div>

        <div class="row d-flex justify-content-center pt-3">
            <div class="col-md-4 d-flex justify-content-center text-center">
                <input type="submit" class="btn btn-primary px-5">
            </div>
        </div>

    {{ form_end(form) }}

{% endblock %}
